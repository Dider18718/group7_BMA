<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.AmbulanceFuelCheckViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Ambulance Fuel Check">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Ambulance ID -->
        <Label layoutX="50.0" layoutY="90.0" text="Select Ambulance:"/>
        <ComboBox fx:id="ambulanceCombo" layoutX="200.0" layoutY="85.0" prefWidth="300.0"/>

        <!-- Fuel Level -->
        <Label layoutX="50.0" layoutY="140.0" text="Fuel Level (%):"/>
        <TextField fx:id="fuelField" layoutX="200.0" layoutY="135.0" prefWidth="200.0"/>

        <!-- Date -->
        <Label layoutX="50.0" layoutY="190.0" text="Date:"/>
        <DatePicker fx:id="fuelDatePicker" layoutX="200.0" layoutY="185.0"/>

        <!-- Buttons -->
        <Button layoutX="200.0" layoutY="250.0" text="Submit" onAction="#handleSubmit"/>
        <Button layoutX="300.0" layoutY="250.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
