<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Dider.PatientSupportController"
            prefHeight="500.0" prefWidth="750.0">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Patient Support Dashboard">
            <font>
                <Font name="Arial Bold" size="22.0"/>
            </font>
        </Label>


        <Button layoutX="50.0" layoutY="80.0" prefWidth="300.0" text="1. Register New Patient" onAction="#goRegisterPatient"/>
        <Button layoutX="50.0" layoutY="120.0" prefWidth="300.0" text="2. Book Appointment for Patient" onAction="#goBookAppointment"/>
        <Button layoutX="50.0" layoutY="160.0" prefWidth="300.0" text="3. Update Patient Contact Info" onAction="#goUpdateContactInfo"/>
        <Button layoutX="50.0" layoutY="200.0" prefWidth="300.0" text="4. Update Patient Appointment Details" onAction="#goUpdateAppointment"/>
        <Button layoutX="50.0" layoutY="240.0" prefWidth="300.0" text="5. Process Discharge Request" onAction="#goDischargeRequest"/>
        <Button layoutX="50.0" layoutY="280.0" prefWidth="300.0" text="6. Manage Visitor Entry" onAction="#goVisitorEntry"/>
        <Button layoutX="50.0" layoutY="320.0" prefWidth="300.0" text="7. View Billing Details" onAction="#goBillingDetails"/>
        <Button layoutX="50.0" layoutY="360.0" prefWidth="300.0" text="8. Respond to Patient Queries" onAction="#goSupportTickets"/>

        <Button layoutX="50.0" layoutY="420.0" prefWidth="300.0" text="Logout" onAction="#handleLogout"/>
    </children>
</AnchorPane>