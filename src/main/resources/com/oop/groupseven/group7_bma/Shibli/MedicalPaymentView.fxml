<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import com.sun.org.apache.xpath.internal.operations.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.MedicalPaymentViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Medical Bill Payment">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Bill Summary -->
        <Label fx:id="billAmountLabel" layoutX="50.0" layoutY="90.0" text="Total Bill: $0.00">
            <font><Font name="System" size="16.0"/></font>
        </Label>

        <!-- Payment Method -->
        <Label layoutX="50.0" layoutY="140.0" text="Payment Method:"/>
        <ComboBox fx:id="paymentMethodCombo" layoutX="200.0" layoutY="135.0" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Credit/Debit Card"/>
                    <String fx:value="Mobile Banking"/>
                    <String fx:value="Cash"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Card/Mobile Number -->
        <Label layoutX="50.0" layoutY="190.0" text="Card/Mobile No:"/>
        <TextField fx:id="accountNumberField" layoutX="200.0" layoutY="185.0" prefWidth="250.0"/>

        <!-- CVV (for card payments) -->
        <Label layoutX="50.0" layoutY="240.0" text="CVV:"/>
        <PasswordField fx:id="cvvField" layoutX="200.0" layoutY="235.0" prefWidth="80.0"/>

        <!-- Expiry Date -->
        <Label layoutX="320.0" layoutY="240.0" text="Expiry Date:"/>
        <TextField fx:id="expiryDateField" layoutX="400.0" layoutY="235.0" prefWidth="100.0" promptText="MM/YY"/>

        <!-- Buttons -->
        <Button layoutX="200.0" layoutY="300.0" text="Pay Now" onAction="#handlePay"/>
        <Button layoutX="300.0" layoutY="300.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
