<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.PatientDashboardViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Dashboard Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Welcome, Patient!">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Appointment -->
        <Button layoutX="50.0" layoutY="100.0" text="Book Appointment" prefWidth="200.0" onAction="#handleBookAppointment"/>

        <!-- Payment -->
        <Button layoutX="300.0" layoutY="100.0" text="Pay Bills" prefWidth="200.0" onAction="#handlePayment"/>

        <!-- Emergency -->
        <Button layoutX="550.0" layoutY="100.0" text="Emergency Help" prefWidth="200.0" onAction="#handleEmergency"/>

        <!-- Feedback -->
        <Button layoutX="50.0" layoutY="180.0" text="Give Feedback" prefWidth="200.0" onAction="#handleFeedback"/>

        <!-- Manage Appointments -->
        <Button layoutX="300.0" layoutY="180.0" text="Manage Appointments" prefWidth="200.0" onAction="#handleManageAppointments"/>

        <!-- Prescriptions -->
        <Button layoutX="550.0" layoutY="180.0" text="Prescription History" prefWidth="200.0" onAction="#handlePrescriptionHistory"/>

        <!-- Location Settings -->
        <Button layoutX="50.0" layoutY="260.0" text="Saved Locations" prefWidth="200.0" onAction="#handleManageLocations"/>

        <!-- Fav Doctors -->
        <Button layoutX="300.0" layoutY="260.0" text="Favorite Doctors" prefWidth="200.0" onAction="#handleFavoriteDoctors"/>

        <!-- Logout or Back -->
        <Button layoutX="550.0" layoutY="260.0" text="Log Out" prefWidth="200.0" onAction="#handleLogout"/>

    </children>
</AnchorPane>
