<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.ManageLocationsViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Manage Locations">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Saved Locations Table -->
        <TableView fx:id="locationsTable" layoutX="50.0" layoutY="80.0" prefWidth="700.0" prefHeight="250.0">
            <columns>
                <TableColumn fx:id="locationNameCol" text="Location Name" prefWidth="200.0"/>
                <TableColumn fx:id="addressCol" text="Address" prefWidth="480.0"/>
            </columns>
        </TableView>

        <!-- Location Name -->
        <Label layoutX="50.0" layoutY="350.0" text="Location Name:"/>
        <TextField fx:id="locationNameField" layoutX="170.0" layoutY="345.0" prefWidth="200.0"/>

        <!-- Address -->
        <Label layoutX="50.0" layoutY="390.0" text="Address:"/>
        <TextField fx:id="addressField" layoutX="170.0" layoutY="385.0" prefWidth="400.0"/>

        <!-- Buttons -->
        <Button layoutX="600.0" layoutY="345.0" text="Add" onAction="#handleAddLocation"/>
        <Button layoutX="600.0" layoutY="385.0" text="Update" onAction="#handleUpdateLocation"/>
        <Button layoutX="660.0" layoutY="385.0" text="Delete" onAction="#handleDeleteLocation"/>
        <Button layoutX="50.0" layoutY="440.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
