<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import com.sun.org.apache.xpath.internal.operations.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.FeedbackSubmissionViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Submit Feedback">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Rating -->
        <Label layoutX="50.0" layoutY="90.0" text="Rating:"/>
        <ComboBox fx:id="ratingCombo" layoutX="150.0" layoutY="85.0" prefWidth="120.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="⭐"/>
                    <String fx:value="⭐⭐"/>
                    <String fx:value="⭐⭐⭐"/>
                    <String fx:value="⭐⭐⭐⭐"/>
                    <String fx:value="⭐⭐⭐⭐⭐"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Feedback Text -->
        <Label layoutX="50.0" layoutY="140.0" text="Your Feedback:"/>
        <TextArea fx:id="feedbackArea" layoutX="150.0" layoutY="135.0" prefWidth="500.0" prefHeight="200.0"/>

        <!-- Buttons -->
        <Button layoutX="150.0" layoutY="360.0" text="Submit" onAction="#handleSubmitFeedback"/>
        <Button layoutX="250.0" layoutY="360.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
