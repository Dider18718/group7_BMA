<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Dider.AssignShiftController"
            prefHeight="500.0" prefWidth="800.0">

    <children>
        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Assign Shift to Doctor">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>

        <!-- Doctor Name -->
        <Label layoutX="50.0" layoutY="90.0" text="Doctor Name:"/>
        <TextField fx:id="doctorNameField" layoutX="200.0" layoutY="85.0" prefWidth="300.0"/>

        <!-- Shift Type -->
        <Label layoutX="50.0" layoutY="140.0" text="Shift Type:"/>
        <ComboBox fx:id="shiftTypeCombo" layoutX="200.0" layoutY="135.0" prefWidth="200.0"/>

        <!-- Date -->
        <Label layoutX="50.0" layoutY="190.0" text="Date:"/>

        <DatePicker fx:id="shiftDatePicker" layoutX="200.0" layoutY="185.0" prefWidth="200.0"/>

        <!-- Status -->
        <Label fx:id="statusLabel" layoutX="200.0" layoutY="240.0" textFill="green"/>

        <!-- Buttons -->
        <Button layoutX="200.0" layoutY="280.0" text="Assign" onAction="#handleAssign"/>
        <Button layoutX="300.0" layoutY="280.0" text="Clear" onAction="#clearForm"/>
        <Button layoutX="400.0" layoutY="280.0" text="Back" onAction="#handleBack"/>
    </children>
</AnchorPane>