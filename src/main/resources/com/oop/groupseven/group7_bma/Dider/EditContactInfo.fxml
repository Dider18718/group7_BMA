    <TextField fx:id="patientIdField" layoutX="20" layoutY="60" promptText="Patient ID"/>
    <TextField fx:id="phoneField" layoutX="20" layoutY="100" promptText="Phone"/>
    <TextField fx:id="addressField" layoutX="20" layoutY="140" promptText="Address"/>
    <Button text="Save" layoutX="20" layoutY="180" onAction="#save"/>
