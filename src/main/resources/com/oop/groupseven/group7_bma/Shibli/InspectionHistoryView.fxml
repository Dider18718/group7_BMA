<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.InspectionHistoryViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Inspection History">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Search Bar -->
        <TextField fx:id="searchField" layoutX="50.0" layoutY="80.0" prefWidth="300.0" promptText="Search by Date, Room, or ID"/>
        <Button layoutX="360.0" layoutY="80.0" text="Search" onAction="#handleSearch"/>

        <!-- History Table -->
        <TableView fx:id="inspectionHistoryTable" layoutX="50.0" layoutY="120.0" prefWidth="700.0" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="dateCol" text="Date" prefWidth="120.0"/>
                <TableColumn fx:id="locationCol" text="Location" prefWidth="200.0"/>
                <TableColumn fx:id="inspectorCol" text="Inspector" prefWidth="200.0"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="150.0"/>
            </columns>
        </TableView>

        <!-- Buttons -->
        <Button layoutX="50.0" layoutY="440.0" text="View Details" onAction="#handleViewDetails"/>
        <Button layoutX="170.0" layoutY="440.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
