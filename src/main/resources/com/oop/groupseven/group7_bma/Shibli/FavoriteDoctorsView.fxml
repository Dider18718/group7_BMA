<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.FavoriteDoctorsViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Favorite Doctors">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Favorites Table -->
        <TableView fx:id="favoriteDoctorsTable" layoutX="50.0" layoutY="80.0" prefWidth="700.0" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="nameCol" text="Doctor Name" prefWidth="250.0"/>
                <TableColumn fx:id="specialtyCol" text="Specialty" prefWidth="250.0"/>
                <TableColumn fx:id="contactCol" text="Contact" prefWidth="200.0"/>
            </columns>
        </TableView>

        <!-- Buttons -->
        <Button layoutX="50.0" layoutY="400.0" text="Add to Favorites" onAction="#handleAddFavorite"/>
        <Button layoutX="200.0" layoutY="400.0" text="Remove from Favorites" onAction="#handleRemoveFavorite"/>
        <Button layoutX="400.0" layoutY="400.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
