<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import com.sun.org.apache.xpath.internal.operations.String?>
<?import javafx.collections.FXCollections?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.HazardEscalationViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Hazard Escalation">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Hazard Type -->
        <Label layoutX="50.0" layoutY="90.0" text="Select Hazard Type:"/>
        <ComboBox fx:id="hazardTypeCombo" layoutX="220.0" layoutY="85.0" prefWidth="300.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Fire"/>
                    <String fx:value="Biohazard Spill"/>
                    <String fx:value="Power Failure"/>
                    <String fx:value="Oxygen Shortage"/>
                    <String fx:value="Security Breach"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Priority Level -->
        <Label layoutX="50.0" layoutY="140.0" text="Priority Level:"/>
        <ComboBox fx:id="priorityCombo" layoutX="220.0" layoutY="135.0" prefWidth="200.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Low"/>
                    <String fx:value="Medium"/>
                    <String fx:value="High"/>
                    <String fx:value="Critical"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Hazard Description -->
        <Label layoutX="50.0" layoutY="190.0" text="Description:"/>
        <TextArea fx:id="descriptionField" layoutX="220.0" layoutY="185.0" prefWidth="400.0" prefHeight="100.0"/>

        <!-- Buttons -->
        <Button layoutX="220.0" layoutY="310.0" text="Escalate" onAction="#handleEscalate"/>
        <Button layoutX="320.0" layoutY="310.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
