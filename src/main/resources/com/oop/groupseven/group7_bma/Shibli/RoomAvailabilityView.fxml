<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.RoomAvailabilityViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Room Availability Update">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>

        <!-- Room Selection -->
        <Label layoutX="50.0" layoutY="90.0" text="Select Room ID:"/>
        <ComboBox fx:id="roomCombo" layoutX="200.0" layoutY="85.0" prefWidth="250.0"/>

        <!-- Availability Status -->
        <Label layoutX="50.0" layoutY="140.0" text="Availability:"/>
        <ToggleGroup fx:id="availabilityGroup"/>
        <RadioButton fx:id="availableRadio" layoutX="200.0" layoutY="135.0" text="Available" toggleGroup="$availabilityGroup"/>
        <RadioButton fx:id="unavailableRadio" layoutX="300.0" layoutY="135.0" text="Unavailable" toggleGroup="$availabilityGroup"/>

        <!-- Reason for Unavailable -->
        <Label layoutX="50.0" layoutY="190.0" text="Reason (if Unavailable):"/>
        <TextField fx:id="reasonField" layoutX="200.0" layoutY="185.0" prefWidth="350.0"/>

        <!-- Submit / Back Buttons -->
        <Button layoutX="200.0" layoutY="250.0" text="Submit" onAction="#handleSubmit"/>
        <Button layoutX="300.0" layoutY="250.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
