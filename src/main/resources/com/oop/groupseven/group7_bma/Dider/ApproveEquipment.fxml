<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Dider.ApproveEquipmentController"
            prefHeight="400.0" prefWidth="600.0">
    <children>
        <Label layoutX="20" layoutY="20" text="Approve Equipment Request"/>
        <TextField fx:id="requestIdField" layoutX="20" layoutY="60" promptText="Request ID"/>
        <TextField fx:id="equipmentField" layoutX="20" layoutY="100" promptText="Equipment Name"/>
        <Button text="Approve" layoutX="20" layoutY="140" onAction="#approve"/>
        <Label fx:id="statusLabel" layoutX="20" layoutY="180"/>
    </children>

</AnchorPane>
