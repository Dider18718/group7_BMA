<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import java.awt.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.RoomAvailabilityViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>
        <Label layoutX="30.0" layoutY="30.0" text="Room Availability Update">
            <font>
                <Font name="System Bold" size="22.0"/>
            </font>
        </Label>

        <Label layoutX="50.0" layoutY="90.0" text="Select Room ID:"/>
        <ComboBox fx:id="roomCombo" layoutX="200.0" layoutY="85.0" prefWidth="250.0"/>

        <Label layoutX="50.0" layoutY="140.0" text="Availability:"/>
        <RadioButton fx:id="availableRadio" layoutX="200.0" layoutY="135.0" text="Available"/>
        <RadioButton fx:id="unavailableRadio" layoutX="300.0" layoutY="135.0" text="Unavailable"/>

        <Label layoutX="50.0" layoutY="190.0" text="Reason (if Unavailable):"/>
        <TextField fx:id="reasonField" layoutX="200.0" layoutY="185.0" prefWidth="350.0"/>

        <Button layoutX="200.0" layoutY="250.0" text="Submit" onAction="#handleSubmit"/>
        <Button layoutX="300.0" layoutY="250.0" text="Back" onAction="#handleBack"/>
    </children>
</AnchorPane>
