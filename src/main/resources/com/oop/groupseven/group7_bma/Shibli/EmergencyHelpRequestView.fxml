<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import com.sun.org.apache.xpath.internal.operations.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.EmergencyHelpRequestViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Emergency Help Request">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Emergency Type -->
        <Label layoutX="50.0" layoutY="90.0" text="Type of Emergency:"/>
        <ComboBox fx:id="emergencyTypeCombo" layoutX="220.0" layoutY="85.0" prefWidth="300.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Ambulance Required"/>
                    <String fx:value="Doctor Needed"/>
                    <String fx:value="Fire/Accident"/>
                    <String fx:value="Other"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Additional Details -->
        <Label layoutX="50.0" layoutY="140.0" text="Details:"/>
        <TextArea fx:id="detailsArea" layoutX="220.0" layoutY="135.0" prefWidth="400.0" prefHeight="100.0"/>

        <!-- Location -->
        <Label layoutX="50.0" layoutY="250.0" text="Current Location:"/>
        <TextField fx:id="locationField" layoutX="220.0" layoutY="245.0" prefWidth="400.0" promptText="Enter address or GPS"/>

        <!-- Buttons -->
        <Button layoutX="220.0" layoutY="300.0" text="Request Help" onAction="#handleRequestHelp"/>
        <Button layoutX="340.0" layoutY="300.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>
