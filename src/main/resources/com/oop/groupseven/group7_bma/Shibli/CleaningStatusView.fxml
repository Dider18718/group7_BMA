<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<?import javafx.collections.FXCollections?>
<?import com.sun.org.apache.xpath.internal.operations.String?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Shibli.CleaningStatusViewController"
            prefHeight="500.0" prefWidth="800.0">

    <children>

        <!-- Title -->
        <Label layoutX="30.0" layoutY="30.0" text="Cleaning Status">
            <font><Font name="System Bold" size="22.0"/></font>
        </Label>

        <!-- Rooms Table -->
        <TableView fx:id="cleaningTable" layoutX="50.0" layoutY="80.0" prefWidth="700.0" prefHeight="300.0">
            <columns>
                <TableColumn fx:id="roomIdCol" text="Room ID" prefWidth="150.0"/>
                <TableColumn fx:id="statusCol" text="Status" prefWidth="200.0"/>
                <TableColumn fx:id="lastCleanedCol" text="Last Cleaned" prefWidth="200.0"/>
            </columns>
        </TableView>

        <!-- Status Selector -->
        <Label layoutX="50.0" layoutY="400.0" text="Update Status:"/>
        <ComboBox fx:id="statusCombo" layoutX="160.0" layoutY="395.0" prefWidth="150.0">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Clean"/>
                    <String fx:value="Needs Recleaning"/>
                </FXCollections>
            </items>
        </ComboBox>

        <!-- Buttons -->
        <Button layoutX="330.0" layoutY="395.0" text="Update" onAction="#handleUpdateStatus"/>
        <Button layoutX="400.0" layoutY="395.0" text="Back" onAction="#handleBack"/>

    </children>
</AnchorPane>

