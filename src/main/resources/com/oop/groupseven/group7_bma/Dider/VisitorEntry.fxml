<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.oop.groupseven.group7_bma.Dider.VisitorEntryController"
            prefHeight="350.0" prefWidth="650.0">

    <children>
        <Label layoutX="20.0" layoutY="20.0" text="Manage Visitor Entry">
            <font>
                <Font name="Arial Bold" size="20.0"/>
            </font>
        </Label>


        <Label layoutX="40.0" layoutY="80.0" text="Visitor Name:"/>
        <TextField fx:id="visitorNameField" layoutX="180.0" layoutY="75.0" prefWidth="300.0"/>

        <Label layoutX="40.0" layoutY="130.0" text="Visiting Patient:"/>
        <TextField fx:id="patientNameField" layoutX="180.0" layoutY="125.0" prefWidth="300.0"/>

        <Label layoutX="40.0" layoutY="180.0" text="Entry Time:"/>
        <TextField fx:id="entryTimeField" layoutX="180.0" layoutY="175.0" prefWidth="150.0"/>

        <Label fx:id="statusLabel" layoutX="180.0" layoutY="220.0" textFill="green"/>

        <Button layoutX="180.0" layoutY="260.0" text="Allow Entry" onAction="#allowEntry"/>
        <Button layoutX="260.0" layoutY="260.0" text="Clear" onAction="#clearForm"/>
        <Button layoutX="330.0" layoutY="260.0" text="Back" onAction="#handleBack"/>
    </children>
</AnchorPane>
